<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_fire_safety_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck"
    tools:context=".FireSafety">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="93dp"
            android:layout_height="78dp"
            android:layout_below="@+id/imageView8"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/firefighting"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="93dp"
            android:layout_height="78dp"
            android:layout_below="@+id/header_id"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/emergencyexit"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="92dp"
            android:layout_below="@+id/textView9"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/imageView3"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:text="خطوات استخدام طفاية الحريق "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />

        <include
            android:id="@+id/header_id"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" />

        <ImageButton
            android:id="@+id/btn_saftey3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_id"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/textView13"
            android:background="@drawable/bg_description_box"
            app:srcCompat="@drawable/arrow1"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btn_saftey2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_saftey3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="110dp"
            android:layout_toEndOf="@+id/textView9"
            android:background="@drawable/bg_description_box"
            app:srcCompat="@drawable/arrow1"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btn_saftey4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_saftey2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="120dp"
            android:layout_toEndOf="@+id/textView2"
            android:background="@drawable/bg_description_box"
            app:srcCompat="@drawable/arrow1"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="93dp"
            android:layout_height="78dp"
            android:layout_below="@+id/imageView7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/fireextinguisher"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="150dp"
            android:layout_height="92dp"
            android:layout_below="@+id/textView13"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/imageView7"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:text="خطوات إطفاء الحريق"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="150dp"
            android:layout_height="92dp"
            android:layout_below="@+id/header_id"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/imageView8"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:text="خطوات التصرف عند حدوث حريق"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_side_list_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_side_list"
        app:menu="@menu/side_list_navigation">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>

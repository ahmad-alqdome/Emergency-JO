<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#C3C5C3C3"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_false_description_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_false_report_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/convergence"

        android:gravity="center"
        android:text="Description"
        android:textColor="@color/text1"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/tv_false_report_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/convergence"
        android:gravity="center"

        android:text="Report"
        android:textColor="@color/text1"
        android:textSize="@dimen/text_size" />

    <RelativeLayout
        android:id="@+id/information_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_false_description_id"
        android:layout_marginTop="10dp"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/tv_false_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="name"
            android:textDirection="rtl"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_false_personalID_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_false_name_id"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Personal ID"
            android:textDirection="rtl"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_false_governorate_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_false_personalID_id"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="governorate"
            android:textDirection="rtl"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_false_phone_number_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_false_governorate_id"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="07812345678"
            android:textDirection="rtl"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_false_car_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_false_military_number_id"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="car name"
            android:textDirection="rtl"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_false_car_number_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_false_car_name_id"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="car number"
            android:textDirection="rtl"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_false_military_number_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_false_military_name_id"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="military number"
            android:textDirection="rtl"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_false_military_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_false_phone_number_id"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="@string/military_name"
            android:textDirection="rtl"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_time_false_request_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/information_id"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/convergence"
        android:text="Time"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time_false_request_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="@string/flase"
        android:textColor="#FA0A1E"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>
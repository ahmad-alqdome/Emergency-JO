<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DirectCall">

    <include
        android:id="@+id/header_id"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btn_direct_call_id"
        android:layout_width="164dp"
        android:layout_height="64dp"
        android:layout_below="@+id/et_description_box_id"
        android:layout_alignParentStart="true"
        android:layout_marginTop="340dp"
        android:background="@drawable/bg_description_box"
        android:fontFamily="@font/convergence"
        android:text="@string/direct_call"
        android:textAllCaps="false"
        android:textColor="@color/text1"
        android:textSize="@dimen/text_size_button"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_id" />

    <TextView
        android:id="@+id/DirectCallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/convergence"
        android:gravity="center"
        android:text="@string/direct_call_des"
        android:textColor="#E80000"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_direct_call_id"
        app:layout_constraintStart_toStartOf="@+id/header_id"
        app:layout_constraintTop_toBottomOf="@+id/header_id"
        app:layout_constraintVertical_bias="0.45" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#C3C5C3C3"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_accepted_description_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_description_request"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/convergence"
        android:gravity="center"
        android:text="Description"

        android:textColor="@color/text1"
        android:textSize="@dimen/text_size" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_accepted_description_id"
        android:src="@drawable/map_icon" />

    <RelativeLayout
        android:id="@+id/information_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="10dp"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/tv_accepted_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="name"
            android:textDirection="rtl"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_accepted_national_number_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_accepted_name_id"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="National Number"
            android:textDirection="rtl"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_accepted_governorate_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_accepted_national_number_id"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="governorate"
            android:textDirection="rtl"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_accepted_phone_number_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_accepted_governorate_id"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="07812345678"
            android:textDirection="rtl"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_time_accepted_request_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/information_id"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/convergence"
        android:text="Time"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time_accepted_request_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="@string/done"
        android:textColor="#25AF06"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>
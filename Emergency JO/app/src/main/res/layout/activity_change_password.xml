<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="0dp"
    tools:context=".ChangePassword"
    tools:ignore="SpeakableTextPresentCheck">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="54dp"
        app:srcCompat="@drawable/user_icon_login" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_personal_id_layout_changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/et_personal_id_changepasswordcheck_id"
            android:layout_width="@dimen/width_personal_id_signup"
            android:layout_height="@dimen/height_input_box"
            android:ems="10"
            android:fontFamily="@font/convergence"
            android:hint="@string/hint_personal_ID_number"
            android:textSize="@dimen/text_size_input_box"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/et_check_number_changepasswordcheck_id"
        android:layout_width="@dimen/width_registration_number"
        android:layout_height="@dimen/height_input_box"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/et_personal_id_layout_changepassword"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/hint_registration_number"
        android:inputType="number|text"
        android:textSize="@dimen/text_size_input_box"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn_check_information_changpassword_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_personal_id_layout_changepassword"
        android:layout_marginTop="65dp"
        android:background="@drawable/bg_button_master"
        android:fontFamily="@font/convergence"
        android:padding="5dp"
        android:text="@string/check_information"
        android:textAllCaps="false"
        android:textColor="@color/text2"
        android:textSize="@dimen/text_size_button"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Password Check -->
    <ImageView
        android:id="@+id/lock_icon_changepassword_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password_layout_changepassword"
        android:layout_marginTop="-39dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/et_password_layout_changepassword"
        app:srcCompat="@drawable/lock_icon_login" />

    <!--password box -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_password_layout_changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_check_information_changpassword_id"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/et_password_id_changepassword"
            android:layout_width="@dimen/width_input_box"
            android:layout_height="@dimen/height_input_box"
            android:layout_below="@+id/btn_change_password_setting"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:ems="10"
            android:fontFamily="@font/convergence"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size_input_box"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_re_password_layout_changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password_layout_changepassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:gravity="center"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/et_re_password_changepassword"
            android:layout_width="@dimen/width_input_box"
            android:layout_height="@dimen/height_input_box"
            android:layout_below="@+id/et_password_layout_changepassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:ems="10"
            android:fontFamily="@font/convergence"
            android:hint="@string/hint_re_password"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size_input_box"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_change_password_changepassword_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_button"
        android:layout_below="@+id/et_re_password_layout_changepassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:padding="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_button_master"
        android:fontFamily="@font/convergence"
        android:text="@string/change_password"
        android:textAllCaps="false"
        android:textColor="@color/text2"
        android:textSize="@dimen/text_size_button"
        tools:ignore="TouchTargetSizeCheck" />


</RelativeLayout>

</ScrollView>
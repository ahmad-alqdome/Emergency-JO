<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePhone">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="54dp"
                app:srcCompat="@drawable/user_icon_login" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_personal_id_layout_changephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_personal_id_changephonecheck_id"
                    android:layout_width="@dimen/width_personal_id_signup"
                    android:layout_height="@dimen/height_input_box"
                    android:ems="10"
                    android:fontFamily="@font/convergence"
                    android:hint="@string/hint_personal_ID_number"
                    android:textSize="@dimen/text_size_input_box"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/et_check_number_changephonecheck_id"
            android:layout_width="@dimen/width_registration_number"
            android:layout_height="@dimen/height_input_box"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/et_personal_id_layout_changephone"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/hint_registration_number"
            android:inputType="number|text"
            android:textSize="@dimen/text_size_input_box"
            tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/btn_check_information_changephone_id"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/et_personal_id_layout_changephone"
                android:layout_marginTop="65dp"
                android:background="@drawable/bg_button_master"
                android:fontFamily="@font/convergence"
                android:padding="5dp"
                android:text="@string/check_information"
                android:textAllCaps="false"
                android:textColor="@color/text2"
                android:textSize="@dimen/text_size_button"
                tools:ignore="TouchTargetSizeCheck" />

            <!-- Password Check -->

        <!--password box -->

        <ImageView
            android:id="@+id/lock_icon_changephone_id"
            android:layout_width="36dp"
            android:layout_height="34dp"
            android:layout_below="@+id/et_phone_layout_changephone"
            android:layout_marginTop="-44dp"
            android:layout_marginEnd="13dp"
            android:layout_toStartOf="@+id/et_phone_layout_changephone"
            android:background="#FD0909"
            app:srcCompat="@android:drawable/stat_sys_phone_call" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_phone_layout_changephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_check_information_changephone_id"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="73dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            app:passwordToggleEnabled="false">

            <EditText
                android:id="@+id/et_phone_id_changephone"
                android:layout_width="@dimen/width_input_box"
                android:layout_height="@dimen/height_input_box"
                android:layout_below="@+id/btn_change_changephone_setting"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:ems="10"
                android:fontFamily="@font/convergence"
                android:hint="@string/new_phone"
                android:inputType="number"
                android:textSize="@dimen/text_size_input_box"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_change_phone_changephone_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_button"
            android:layout_below="@+id/et_phone_layout_changephone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_button_master"
            android:fontFamily="@font/convergence"
            android:padding="5dp"
            android:text="@string/change_phone_number"
            android:textAllCaps="false"
            android:textColor="@color/text2"
            android:textSize="@dimen/text_size_button"
            tools:ignore="TouchTargetSizeCheck" />


        </RelativeLayout>

</ScrollView>